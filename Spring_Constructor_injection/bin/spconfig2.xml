<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
   "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
<!-- injecting to its dependency through constructor so make sure there should be a constructor -->
	<bean id="id1" class="com.springbean.Categories1" autowire="constructor">
		<property name="name" value="General Book"/>
	</bean>
	<bean id="bk" class="com.springbean.Book">
		<property name="bookname" value="General" />
		<property name="bookprice" value="300" />
 	</bean>
 </beans>